{
  "name": "centagon/build-core",
  "description": "The core of the Build CMS.",
  "keywords": ["cms", "framework", "laravel"],
  "license": "MIT",
  "type": "library",
  "require": {
    "php": ">=5.6.4",
    "lavary/laravel-menu": "^1.6",
    "wikimedia/composer-merge-plugin": "^1.3",
    "intervention/image": "^2.3"
  },
  "require-dev": {
    "graham-campbell/testbench": "^3.0",
    "phpunit/phpunit": "^4.8|^5.0"
  },
  "autoload": {
    "psr-4": { "Build\\Core\\": "src/Build/Core" }
  },
  "autoload-dev": {
    "psr-4" : { "Build\\Core\\Tests\\" : "tests" }
  },
  "minimum-stability": "dev"
}